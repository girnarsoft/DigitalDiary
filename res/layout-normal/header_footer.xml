<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/header_bck_grnd"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linear_layout_img_bck"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/logobackground"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_bck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon" />
         <ImageView
        android:id="@+id/img_logo"
        android:layout_width="30dp"
        android:layout_height="35dp"
      
        android:layout_margin="5dp"
       
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_diary_icon" />
        
    </LinearLayout>

   
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="AvenirNextCondensed"
        
        android:textSize="17sp"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout_img_home"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="center_vertical" >

        <ImageView
             android:background="@drawable/logobackground"
            android:id="@+id/img_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_icon" />
    </LinearLayout>

</RelativeLayout>